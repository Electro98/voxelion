{
    "cmake.ignoreCMakeListsMissing": true,
    "cSpell.words": [
        "glfw",
        "Multisample",
        "multisampling",
        "stbi",
        "SWAPCHAIN",
        "VKAPI",
        "Voxelion"
    ],
    "files.associations": {
        "limits": "cpp",
        "iosfwd": "cpp",
        "stdexcept": "cpp",
        "memory": "cpp",
        "chrono": "cpp",
        "format": "cpp"
    },
    "clangd.fallbackFlags": [
        "-I${workspaceFolder}/Voxelion-Core/Source/",
        "-I${workspaceFolder}/Vendor/glm",
        "-I${workspaceFolder}/Vendor/stb",
        "-Wall"
    ]
}